[user]
	name = John Mastro
	email = john.b.mastro@gmail.com

[core]
	editor = vim
	attributesfile = ~/.gitattributes

[push]
	default = upstream

[color]
	ui = true

[diff "lisp"]
	xfuncname = "^(\\(.*)$"

[alias]
	br = branch -v

	co = checkout

	ci = commit

	d = diff
	dc = diff --cached
	dh = diff HEAD

	l = log --decorate --graph --abbrev-commit --pretty=oneline
	ll = log --decorate --graph --stat --date=short

	mt = mergetool

	rb = rebase
	rc = rebase --continue
	rs = rebase --skip

	st = status -sb

[url "git@github.com:"]
	insteadOf = "gh:"

[url "git://github.com/"]
	insteadOf = "github:"
