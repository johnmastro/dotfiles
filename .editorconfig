# -*- conf-mode -*-

root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[*.{js,jsx,ts,html,css,babelrc}]
indent_size = 2

[*.{diff,md,mkd,markdown}]
trim_tailing_whitespace = false

[{Makefile,*.mk}]
indent_style = tab
indent_size = 8
